# 数据库配置 - Docker Compose使用
POSTGRES_DB=sector_strength
POSTGRES_USER=sector_user
# 注意：请修改默认密码！这是一个临时生成的密码
POSTGRES_PASSWORD=sector_temp_2025_change_me
POSTGRES_DATA_DIR=./data/postgres

# 数据库连接字符串（供后端应用使用）
# 注意：在Docker环境中，host应该是postgres而不是localhost
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# 异步数据库连接字符串（FastAPI使用）
DATABASE_URL_ASYNC=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# 应用环境
ENVIRONMENT=development
NODE_ENV=development

# 前端配置
NEXT_PUBLIC_API_URL=http://localhost:8000/api  # 开发环境使用localhost
# Docker环境使用: http://backend:8000/api
NEXT_PUBLIC_APP_NAME=板块强度

# 后端配置
API_HOST=0.0.0.0
API_PORT=8000

# 安全配置
# 注意：请生成新的JWT密钥！可以使用: openssl rand -hex 32
SECRET_KEY=generated_jwt_secret_replace_me_2025
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# JWT配置
JWT_SECRET=${SECRET_KEY}
JWT_EXPIRE_MINUTES=${ACCESS_TOKEN_EXPIRE_MINUTES}

# 数据源配置
AKSHARE_TIMEOUT=30
CACHE_TTL=300

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 开发工具配置
DEBUG=True
RELOAD=True

# 邮件服务配置
# SMTP服务器配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
MAIL_FROM=noreply@sector-strength.com

# 前端URL（用于邮件中的链接）
FRONTEND_URL=http://localhost:3000

# 应用配置
APP_NAME=Sector Strength
APP_VERSION=1.0.0

# CORS配置
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# 注意：在生产环境中，请确保使用安全的密码和密钥